@model ECommerce.ViewModel.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                Name
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(Model => Model.FirstName)
                @Html.DisplayFor(Model => Model.LastName)
            </dd>
            <dt class="col-sm-4">
                Email
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(Model => Model.Email)
            </dd>
            <dt class="col-sm-4">
                Phone Number
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(Model => Model.Phone)
            </dd>
        </dl>
        <hr />
    </div>
</div>

