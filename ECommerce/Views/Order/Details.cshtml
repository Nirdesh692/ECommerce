@model ECommerce.ViewModel.OrderViewModel
@{
    ViewData["Title"] = "OrderDetails";
}

<div class="container">
    <div class="d-flex justify-content-between">
        <a class="btn btn-primary" asp-action="Index">Back</a>
        @*@<a class="btn btn-primary" onclick="window.location.href='@Url.Action("Invoice", "Orders", new { id = Model.Id })'">>Generate Invoice</a>*@
    </div>
    <h4 class="text-center">Order Details</h4>
    <hr />
    <dl class="row">
        <div class="col">
            <dl class="row offset-sm-2">
                <dt class="col-sm-2">
                    Name
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model => model.User.FirstName) @Html.DisplayFor(model => model.User.LastName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderDate)
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model => model.OrderDate)
                </dd>
            </dl>
            <dl class="row offset-sm-2">
                <dt class="col-sm-2">
                    Address
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model=>model.Shipping.Address)
                </dd>
                <dt class="col-sm-2">
                    Phone Number
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model => model.User.PhoneNumber)
                </dd>
            </dl>
            <dl class="row offset-sm-2">
                <dt class="col-sm-2">
                    Email
                </dt>
                <dd class="col-sm-3">
                    @Html.DisplayFor(model => model.User.Email)
                </dd>
            </dl>

        </div>

        <div class="row">
            <div class="col">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Product
                            </th>
                            <th>
                                Quantity
                            </th>
                            <th>
                                Rate
                            </th>
                            <th>
                                Total Price
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td class="col-sm-3">
                                    Product
                                </td>
                                <td class="col-sm-3">
                                    <div class="d-flex align-items-center">
                                        <img src="@item.ImageUrl" class="img-fluid" alt="Sofa" style="width: 120px; border-radius: 10px;">
                                    </div>
                                </td>
                                <td class="col-sm-2">
                                    @Html.DisplayFor(model => item.Quantity)
                                </td>

                                <td class="col-sm-2">
                                    @Html.DisplayFor(model => item.UnitPrice)
                                </td>
                                <td class="col-sm-2">
                                    @Html.DisplayFor(Model => item.TotalPrice)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>


    </dl>
</div>
